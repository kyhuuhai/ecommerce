<div class="modal fade" id="newCategoryModal" role="dialog">
  <div class="modal-dialog modal-sm">
    <%= form_for category, url: categories_path do |f| %>
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title"><%= t ".title" %></h4>
        </div>

        <div class="modal-body">
          <div class="form-group">
            <%= f.label :name, t(".name") %>
            <%= f.text_field :name, required: true, class: "form-control" %>
          </div>
        </div>

        <div class="modal-footer">
          <%= f.submit "Save", class: "btn btn-primary submit-button" %>
          <button type="button" class="btn btn-default" data-dismiss="modal">
            <%= t ".close" %>
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="modal fade" id="editCategoryModal" role="dialog">
  <div class="modal-dialog modal-sm">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title"><%= t ".title" %></h4>
        </div>

        <div class="modal-body">
          <div class="form-group">
            <label>Name</label>
            <input type="text" class="name-edit-category form-control"></input>
          </div>
        </div>

        <div class="modal-footer">
          <button type="submit" , class="btn btn-primary edit-button">Save</button>
          <button type="button" class="btn btn-default" data-dismiss="modal">
            <%= t ".close" %>
          </button>
        </div>
      </div>
  </div>
</div>
